<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_rounded_top">

    <desla.aos.eating.ui.custom.CustomTextView
        android:id="@+id/customTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="카테고리" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_btn_category_dialog"
        android:layout_marginHorizontal="@dimen/margin_horizontal_btn_filter"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customTextView">

        <LinearLayout
            android:id="@+id/cons1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_filter"
            android:layout_marginBottom="@dimen/margin_bottom_btn_filter">

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn1"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_right_btn_filter"
                android:layout_weight="1"
                app:filter_text="한식" />

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn2"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:filter_text="일식" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cons2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_filter"
            android:layout_marginBottom="@dimen/margin_bottom_btn_filter">

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn3"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_right_btn_filter"
                android:layout_weight="1"
                app:filter_text="분식" />

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:filter_text="카페/디저트" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cons3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_filter"
            android:layout_marginBottom="@dimen/margin_bottom_btn_filter">

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_right_btn_filter"
                android:layout_weight="1"
                app:filter_text="치킨" />

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:filter_text="피자" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cons4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_filter"
            android:layout_marginBottom="@dimen/margin_bottom_btn_filter">

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_right_btn_filter"
                android:layout_weight="1"
                app:filter_text="아시아/양식" />

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:filter_text="중국집" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cons5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_filter"
            android:layout_marginBottom="@dimen/margin_bottom_btn_filter">

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_right_btn_filter"
                android:layout_weight="1"
                app:filter_text="야식" />

            <desla.aos.eating.ui.custom.CustomFilterButton
                android:id="@+id/btn10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:filter_text="패스트푸드" />

        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/background_yellow_rounded"
        android:fontFamily="@font/jalnan_otf"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="5sp"
        android:text="완료"
        android:textColor="#de000000"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear" />

</androidx.constraintlayout.widget.ConstraintLayout>